{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}